{
    "tasks": {
        "dev": "deno run --watch -A --env src/main.ts",
        "format": "deno fmt",
        "lint": "deno lint && deno fmt --check",
        "test": "deno test -A --env",
        "coverage-report": "deno test -A --env --coverage=coverage && deno coverage ./coverage --lcov --include=./src --output=coverage.lcov",
        "seed": "deno run -A --env seed.ts"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/expect": "jsr:@std/expect@^1.0.7",
        "@std/testing": "jsr:@std/testing@^1.0.4",
        "mongoose": "npm:mongoose@^8.8.0"
    },
    "lint": {
        "include": ["src/"],
        "rules": {
            "tags": ["recommended"],
            "include": [],
            "exclude": []
        }
    },
    "fmt": {
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false,
        "include": ["src/"],
        "exclude": []
    }
}
