{
  "tasks": {
    "dev": "deno run --watch -A --env src/main.ts",
    "format": "deno fmt",
    "lint": "deno lint && deno fmt --check",
    "test": "deno test -A --env",
    "coverage-report": "deno test -A --env --coverage=coverage && deno coverage ./coverage --lcov --include=./src --output=coverage.lcov",
    "seed": "deno run -A --env seed.ts"
  },
  "imports": {
    "@/": "./src/",
    "oak": "https://deno.land/x/oak@v17.1.2/mod.ts",
    "zod": "https://deno.land/x/zod@v3.23.8/mod.ts",
    "bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "superoak": "https://deno.land/x/superoak@4.8.1/mod.ts",
    "@std/log": "https://deno.land/std/log/mod.ts",
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@^1.0.7",
    "@std/testing": "jsr:@std/testing@^1.0.4",
    "mongoose": "npm:mongoose@^8.8.0"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": false,
    "include": ["src/"],
    "exclude": []
  }
}
